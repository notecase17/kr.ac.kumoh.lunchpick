<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:background="#fcfcfc">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/store_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#141414"
        android:text="엽기 떡볶이"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/store_img"
        />

    <TextView
        android:id="@+id/tv_store_Addr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#2D2D2D"
        android:text="신당동"
        app:layout_constraintTop_toBottomOf="@id/tv_storeName"
        app:layout_constraintStart_toStartOf="@id/tv_storeName"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:srcCompat = "@drawable/ic_baseline_chevron_right_24"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>