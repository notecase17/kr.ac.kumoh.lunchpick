<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#4FD6BD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ivAppName"
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/lunchpick_logo_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:text="내 손 안의 월드컵"
        app:layout_constraintTop_toBottomOf="@id/ivAppName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>

    <ImageView
        android:id="@+id/ivFoodCup"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/food_wcup"
        app:layout_constraintTop_toBottomOf="@id/tvIntro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/tvFoodCup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:text="음식 월드컵 하러가기"
        app:layout_constraintTop_toBottomOf="@id/ivFoodCup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>

    <ImageView
        android:id="@+id/ivResCup"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/restaurant_wcup"
        app:layout_constraintTop_toBottomOf="@id/ivFoodCup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/tvResCup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:text="식당 월드컵 하러가기"
        app:layout_constraintTop_toBottomOf="@id/ivResCup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>

    <View
        android:id="@+id/middleLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvFoodCup"
        app:layout_constraintBottom_toTopOf="@id/ivResCup"
        ></View>

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="내 설정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivSettings"
        ></TextView>

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/settings_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="LOGOUT"
        ></TextView>

    <View
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>