<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:background="#4FD6BD"
            android:textStyle="bold"
            android:textSize="28sp"
            android:text="00ê°• 00/00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#2ECB72"
            android:text="VS" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="260dp"
            android:layout_gravity="bottom|center_vertical"
            android:progress="10"/>

        <ImageView
            android:id="@+id/btn_FoodImg1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="40dp"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:scaleType="centerCrop"
            android:drawable="@drawable/food_img_001" />

        <ImageView
            android:id="@+id/btn_FoodImg2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="334dp"
            android:scaleType="centerCrop"
            android:drawable="@drawable/food_img_002"
            android:onClick="onClick" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>