<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:background="#4FD6BD"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="00ê°• 00/00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="245dp"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2ECB72"
                android:text="VS" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="260dp"
                android:layout_gravity="bottom|center_vertical"
                android:progress="10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_FoodImg1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="40dp"
                android:onClick="onClick"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:gravity="bottom|center_horizontal"
                android:drawableBottom="@drawable/food_img_001"
                android:text="name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_FoodImg2"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="334dp"
                android:gravity="bottom|center_horizontal"
                android:drawableBottom="@drawable/food_img_002"
                android:text="name"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>