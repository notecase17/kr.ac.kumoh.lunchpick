<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvService"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="60dp"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="내 설정"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivSettings"
        />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="이름(별명)"
        app:layout_constraintTop_toBottomOf="@id/tvService"
        app:layout_constraintBottom_toTopOf="@id/editStoreName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editStoreName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="-----"
        app:layout_constraintTop_toBottomOf="@id/tvStoreName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvStoreIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="18dp"
        android:text="성별/나이"
        app:layout_constraintTop_toBottomOf="@id/editStoreName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMenu"/>

    <Spinner
        android:id="@+id/spGender"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/editStoreName"
        app:layout_constraintStart_toEndOf="@id/tvStoreIntro"
        />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:inputType="number"
        android:hint="나이"
        app:layout_constraintTop_toBottomOf="@id/editStoreName"
        app:layout_constraintStart_toEndOf="@id/spGender"
        />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="22dp"
        android:text="아이디"
        app:layout_constraintTop_toBottomOf="@id/tvStoreIntro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvPw1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textColor="#0F0F0F"
        android:text="아이디"
        app:layout_constraintLeft_toRightOf="@id/tvMenu"
        app:layout_constraintTop_toBottomOf="@id/spGender"/>

    <TextView
        android:id="@+id/tvPw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="22dp"
        android:text="비밀번호"
        app:layout_constraintTop_toBottomOf="@id/tvMenu"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editUserPw1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPw1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvPw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/editUserPw1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editUserPw2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPw2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="40dp"
        android:text="수정하기"
        app:layout_constraintTop_toBottomOf="@id/editUserPw2"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>