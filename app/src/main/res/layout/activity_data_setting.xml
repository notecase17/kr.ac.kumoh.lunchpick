<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_baseline_store_mall_directory_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvService"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="2dp"
            android:textSize="28sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="식당 데이터 추가"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivSettings"
            />

        <ImageView
            android:id="@+id/ivStoreImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/ic_baseline_texture_24"
            app:layout_constraintTop_toBottomOf="@id/tvService"
            app:layout_constraintBottom_toTopOf="tvStoreName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvImgSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textColor="#0F0F0F"
            android:text="이미지 등록"
            app:layout_constraintTop_toBottomOf="@id/tvService"
            app:layout_constraintLeft_toRightOf="@id/ivStoreImg"/>
        <TextView
            android:id="@+id/tvImgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#FF0000"
            android:text="jpg, png 파일 0000x0000 크기 미만"
            app:layout_constraintTop_toBottomOf="@id/tvImgSet"
            app:layout_constraintLeft_toRightOf="@id/ivStoreImg"/>
        <TextView
            android:id="@+id/tvImgPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:text="이미지 경로"
            app:layout_constraintTop_toBottomOf="@id/tvImgName"
            app:layout_constraintLeft_toRightOf="@id/ivStoreImg"/>
        <Button
            android:id="@+id/btnImgFind"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:gravity="center"
            android:text="불러오기"
            app:layout_constraintLeft_toRightOf="@id/tvImgPath"
            app:layout_constraintTop_toBottomOf="@id/tvImgName"/>

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="22dp"
            android:text="식당 이름"
            app:layout_constraintTop_toBottomOf="@id/ivStoreImg"
            app:layout_constraintBottom_toTopOf="@id/editStoreName"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/editStoreName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="식당 이름을 입력하세요"
            app:layout_constraintTop_toBottomOf="@id/tvStoreName"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvStoreIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="22dp"
            android:text="가게 설명"
            app:layout_constraintTop_toBottomOf="@id/editStoreName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editStoreIntro"/>

        <EditText
            android:id="@+id/editStoreIntro"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:text="내용을 입력해주세요."
            app:layout_constraintTop_toBottomOf="@id/tvStoreIntro"
            app:layout_constraintBottom_toTopOf="@id/tvMenu"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="22dp"
            android:text="메뉴"
            app:layout_constraintTop_toBottomOf="@id/editStoreIntro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rvMenu"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMenu"
            android:layout_width="250dp"
            android:layout_height="270dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toBottomOf="@id/tvMenu"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="40dp"
            android:text="식당 등록"
            app:layout_constraintTop_toBottomOf="@id/rvMenu"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <!--</ScrollView>-->
</androidx.constraintlayout.widget.ConstraintLayout>